<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <stroke android:width="1dip" android:color="#868e96" />
            <gradient android:angle="-90" android:startColor="#868e96" android:endColor="#868e96"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <stroke android:width="1dip" android:color="#adb5bd" />
            <solid android:color="#adb5bd"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="50dp" />
            <stroke android:width="1dip" android:color="#ced4da" />
            <gradient android:angle="-90" android:startColor="#ced4da" android:endColor="#ced4da" />
        </shape>
    </item>
</selector>